<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.AdminELearningAssignmentFragment">

    <RelativeLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_close"
            app:tint="@color/test_color_7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ripple_effect10"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Assign"
            android:textAllCaps="false"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="title"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:hint="Assignment title"
        android:inputType="text"
        android:padding="@dimen/dimen_16"
        android:textColor="@color/black"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_group" />

        <Button
            android:id="@+id/selectAllBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dimen_16"
            android:background="@drawable/ripple_effect6"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="All classes"
            android:textAllCaps="false"
            android:textSize="@dimen/text_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="name"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_description"
            android:drawablePadding="@dimen/dimen_16"
            android:focusableInTouchMode="true"
            android:hint="Description"
            android:inputType="text"
            android:padding="@dimen/dimen_16"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/attachmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_16">

        <ImageView
            android:id="@+id/attachment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_attachment" />

        <TextView
            android:id="@+id/attachmentTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_toEndOf="@id/attachment_icon"
            android:text="Add attachment"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attachment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_toEndOf="@id/attachment_icon"
            android:orientation="horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attachment_recyclerview"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_toEndOf="@id/attachment_icon"
            android:background="@drawable/line_separator"
            android:orientation="horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/addAttachmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attachment_recyclerview"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_toEndOf="@id/attachment_icon"
            android:clickable="true"
            android:drawablePadding="@dimen/dimen_16"
            android:focusable="true"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            android:text="Add attachment"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_add"
            app:drawableTint="@color/black" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/gradingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_16">

        <ImageView
            android:id="@+id/points_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_grading" />

        <TextView
            android:id="@+id/point_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_toStartOf="@id/resetGradingBtn"
            android:layout_toEndOf="@id/points_icon"
            android:text="100 points"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/resetGradingBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_close"
            app:tint="@color/test_color_7" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />


    <RelativeLayout
        android:id="@+id/dateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_date1" />

        <TextView
            android:id="@+id/startDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_toStartOf="@id/startDateBtn"
            android:layout_toEndOf="@id/date_icon"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/startDateTxt"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_toEndOf="@id/date_icon"
            android:background="@drawable/line_separator"
            android:orientation="horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/endDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_toStartOf="@id/endDateBtn"
            android:layout_toEndOf="@id/date_icon"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            android:text="@string/todo"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/startDateBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:tint="@color/test_color_7" />

        <ImageView
            android:id="@+id/endDateBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/startDateBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="@dimen/dimen_16"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:tint="@color/test_color_7" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/topic_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dimen_16"
        android:padding="@dimen/dimen_16"
        android:text="Topic"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_topic2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

</LinearLayout>