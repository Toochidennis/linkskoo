<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StudentPaymentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <HorizontalScrollView
            android:id="@+id/horizontal_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="360dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/color_5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/payment_icon"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/fee_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="30dp"
                            android:layout_toEndOf="@+id/icon"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center_horizontal"
                            android:text="This term school fees"
                            android:textColor="@color/icons_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fee_title"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/icon"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center_horizontal"
                            android:text="N10,000.00"
                            android:textColor="@color/icons_color"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/amount"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="15dp"
                            android:layout_toEndOf="@id/icon">

                            <Button
                                android:id="@+id/view_details"
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect2"
                                android:clickable="true"
                                android:elevation="0dp"
                                android:focusable="true"
                                android:fontFamily="@font/montserrat"
                                android:text="View Details"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <Button
                                android:id="@+id/btn_pay_now"
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect3"
                                android:backgroundTint="@color/color_3"
                                android:clickable="true"
                                android:focusable="true"
                                android:fontFamily="@font/montserrat"
                                android:text="PAY NOW!"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="360dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/color_5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/debt_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/debt_icon"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/debt_fee_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="30dp"
                            android:layout_toEndOf="@+id/debt_icon"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center_horizontal"
                            android:text="You owe"
                            android:textColor="@color/icons_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/debt_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/debt_fee_title"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/debt_icon"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center_horizontal"
                            android:text="N10,000.00"
                            android:textColor="@color/icons_color"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/debt_amount"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="15dp"
                            android:layout_toEndOf="@id/debt_icon">

                            <Button
                                android:id="@+id/view_debt_details"
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect2"
                                android:clickable="true"
                                android:elevation="0dp"
                                android:focusable="true"
                                android:fontFamily="@font/montserrat"
                                android:text="View Details"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <Button
                                android:id="@+id/btn_pay_debt"
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_effect3"
                                android:backgroundTint="@color/color_3"
                                android:clickable="true"
                                android:focusable="true"
                                android:fontFamily="@font/montserrat"
                                android:text="PAY NOW!"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/history_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/horizontal_view">

            <TextView
                android:id="@+id/history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Payment History"
                android:textColor="@color/text_bg_color"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_text"
                android:layout_marginTop="10dp"
                android:clipToPadding="true" />

            <TextView
                android:id="@+id/history_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat"
                android:lines="2"
                android:text="@string/can_not_retrieve"
                android:textAlignment="center"
                android:textColor="@color/text_bg_color"
                android:textSize="14sp"
                android:visibility="gone" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/montserrat"
        android:lines="2"
        android:text="@string/can_not_retrieve"
        android:textAlignment="center"
        android:textColor="@color/text_bg_color"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar" />

    <Button
        android:id="@+id/refresh_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/error_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/refresh_layout"
        android:textColor="@color/color_5"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_message" />

</androidx.constraintlayout.widget.ConstraintLayout>