                        app:contentPadding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="5dp">

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="23dp"
                                android:background="@color/color_1"
                                android:drawableStart="@drawable/ic_play_arrow_white_24dp"
                                android:fontFamily="@font/montserrat"
                                android:text="PlAY"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp">

                        <TextView
                            android:id="@+id/chemistry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Chemistry"
                            android:textColor="@color/color_3"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/chemistry_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/chemistry"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_alternates"
                            android:lines="2"
                            android:text="Water"
                            android:textColor="@color/text_bg_color"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/chemistry_time"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/chemistry_title"
                            android:layout_marginTop="7dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_time"
                            app:tint="@color/gray" />

                        <TextView
                            android:id="@+id/chemistry_time_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="65dp"
                            android:layout_toEndOf="@id/chemistry_time"
                            android:fontFamily="@font/montserrat"
                            android:text="30 minutes"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/chemistry_profile"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/chemistry_time"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/gray" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/chemistry_time_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="6dp"
                            android:layout_toEndOf="@id/chemistry_profile"
                            android:fontFamily="@font/montserrat"
                            android:text="30 minutes"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <TextView
