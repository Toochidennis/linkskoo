<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.LibraryVideosFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_videos_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates"
                    android:text="Top Videos"
                    android:textColor="@color/text_bg_color"
                    android:textSize="18sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="200dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/text_bg_color"
                        android:fontFamily="@font/montserrat"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="SEE ALL"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="15dp"
                        android:backgroundTint="@color/romance"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:contentPadding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="5dp">

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="23dp"
                                android:background="@color/color_3"
                                android:drawableStart="@drawable/ic_play_arrow_white_24dp"
                                android:fontFamily="@font/montserrat"
                                android:text="PlAY"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </androidx.cardview.widget.CardView>


                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/maths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Maths"
                            android:textColor="@color/color_3"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/maths_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/maths"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_alternates"
                            android:lines="2"
                            android:text="Linear algebra and verbal reasoning and quantitative"
                            android:textColor="@color/text_bg_color"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/maths_time"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/maths_title"
                            android:layout_marginTop="7dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_time"
                            app:tint="@color/gray" />

                        <TextView
                            android:id="@+id/time_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="65dp"
                            android:layout_toEndOf="@id/maths_time"
                            android:fontFamily="@font/montserrat"
                            android:text="30 minutes"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/maths_time"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_person"
                            app:tint="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/time_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="6dp"
                            android:layout_toEndOf="@id/profile"
                            android:fontFamily="@font/montserrat"
                            android:text="30 minutes"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@color/green_cyan"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:contentPadding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="5dp">

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="23dp"
                                android:background="@color/color_2"
                                android:drawableStart="@drawable/ic_play_arrow_white_24dp"
                                android:fontFamily="@font/montserrat"
                                android:text="PlAY"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </androidx.cardview.widget.CardView>


                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
