<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_10"
    android:layout_marginEnd="@dimen/dimen_10"
    android:layout_marginBottom="@dimen/dimen_10"
    android:background="@drawable/edit_text_bg4"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10">

        <androidx.cardview.widget.CardView
            android:id="@+id/count_icon"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/test_color_3"
            app:cardCornerRadius="@dimen/dimen_32">

            <TextView
                android:id="@+id/questionCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/questionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_toEndOf="@id/count_icon"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:lines="2"
            android:minLines="1"
            android:text="Introduction to DevOps is what____?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_layout"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator">

        <TextView
            android:id="@+id/answerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_toStartOf="@id/questionButton"
            android:drawablePadding="@dimen/dimen_16"
            android:ellipsize="end"
            android:foreground="?android:attr/selectableItemBackground"
            android:lines="1"
            android:layout_marginStart="5dp"
            android:padding="@dimen/dimen_10"
            android:text="Add answer"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_short_text" />

        <ImageView
            android:id="@+id/questionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:contentDescription="@string/todo"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_more" />

    </RelativeLayout>

</RelativeLayout>