<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021/2022"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/view_annual_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Annual"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:textColor="#0000FF"/>

    </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/first_term_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <LinearLayout
                android:id="@+id/bg_color"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/circle2">
                <TextView
                    android:id="@+id/initial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/first_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Term"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/bg_color"
                android:fontFamily="@font/roboto"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:id="@+id/comp_result_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/circular_bg">

                <ImageView
                    android:id="@+id/composite_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view_comfy"
                    android:tint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@id/comp_result_bg"
                android:background="@drawable/circular_bg">

                <ImageView
                    android:id="@+id/course_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_collections_bookmark"
                    android:tint="@color/blue" />
            </LinearLayout>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/second_term_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:id="@+id/bg_color2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/circle2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/second_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd Term"
                android:layout_toRightOf="@id/bg_color2"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:id="@+id/comp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/circular_bg"
                android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/composite_result_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_comfy"
                android:tint="@color/blue"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:background="@drawable/circular_bg"
                android:layout_toLeftOf="@id/comp_2"
                android:gravity="center"
                android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/course_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_collections_bookmark"
                android:tint="@color/blue"
                />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/third_term_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:id="@+id/bg_color3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/circle2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/third_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Term"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/bg_color3"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:id="@+id/comp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center">

            <ImageView
                android:id="@+id/composite_result_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_comfy"
                android:tint="@color/blue"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/comp_3"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:layout_marginRight="10dp"
                >
            <ImageView
                android:id="@+id/course_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_collections_bookmark"
                android:tint="@color/blue"
                />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>