<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:tint="@color/black" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/back_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/back_btn"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:text="Add Receipt"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/student_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="15dp"
        android:autofillHints="name"
        android:background="@drawable/edit_text_bg"
        android:drawableStart="@drawable/ic_person"
        android:drawableTint="@color/color_5"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="@font/montserrat"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/amount_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_name_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="@string/amount"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reference_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:autofillHints="postalAddress"
        android:background="@drawable/edit_text_bg"
        android:drawableStart="@drawable/ic_reference_number"
        android:drawableTint="@color/color_5"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Reference number"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/date_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reference_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:autofillHints="phone"
        android:background="@drawable/edit_text_bg"
        android:clickable="true"
        android:drawableStart="@drawable/ic_date"
        android:drawableTint="@color/color_5"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/montserrat"
        android:hint="Date"
        android:inputType="date|time"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_receipt_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/date_input"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ripple_effect"
        android:text="ADD"
        android:textColor="@color/color_5"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>